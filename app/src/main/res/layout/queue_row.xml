<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/_0sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/cv_queue_row"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_queue_row_parent"
    >
        <android.support.v7.widget.CardView
                android:id="@+id/cv_queue_row_drag"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        >

            <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_move"
                    android:layout_margin="@dimen/_5sdp"
                    android:clickable="false"
                    android:layout_gravity="center"
            />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        >
            <!--<ImageView-->
                    <!--android:id="@+id/iv_queue_row_icon"-->
                    <!--android:layout_width="@dimen/home_screen_item_height"-->
                    <!--android:layout_height="@dimen/home_screen_item_height"-->
                    <!--android:src="@drawable/ic_songs"-->
                    <!--android:clickable="false"-->
            <!--/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_queue_row_icon"
                    android:layout_width="@dimen/home_screen_item_height"
                    android:layout_height="@dimen/home_screen_item_height"
                    android:src="@drawable/ic_songs"
                    android:clickable="false"
            />


        </android.support.v7.widget.CardView>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
        >
            <TextView
                    android:id="@+id/tv_queue_row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Songs"
                    android:textSize="@dimen/text_size_3"
                    android:clickable="false"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackgroundLight"
            />
            <TextView
                    android:id="@+id/tv_queue_row_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Songs"
                    android:textSize="@dimen/text_size_4"
                    android:clickable="false"
                    android:textColor="@color/colorBackgroundLight"
            />
        </LinearLayout>

        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_playing"
                android:id="@+id/iv_playing"
                android:layout_marginStart="@dimen/_15sdp"
        />
        <!--<pl.droidsonroids.gif.GifImageView-->
                <!--android:layout_width="@dimen/_20sdp"-->
                <!--android:layout_height="@dimen/_20sdp"-->
                <!--android:src="@drawable/ic_playing_gif_trans"-->
                <!--android:id="@+id/iv_playing"-->
                <!--android:layout_marginLeft="@dimen/_15sdp"-->
        <!--/>-->
        <android.support.v7.widget.CardView
                android:id="@+id/cv_queue_row_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        >

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_more_white"
                    android:layout_margin="@dimen/_10sdp"

                    android:clickable="false"
                    android:id="@+id/iv_queue_row_options"
                    android:layout_gravity="center"
            />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>
