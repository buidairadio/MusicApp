<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/standard_item_height"
        android:orientation="vertical"
>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_playlist_fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
    >
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_16sdp"
            android:id="@+id/cv_add_playlist"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            android:visibility="gone"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_playlist"
                android:layout_gravity="center"
        />
    </android.support.v7.widget.CardView>
</RelativeLayout>
