<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".screens.HomeScreenActivity.AllSongsScreenFragment.AllSongsFragment"
             android:background="@color/colorAbsoluteTransparency"
             android:id="@+id/fl_all_songs_fragment"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <android.support.design.widget.TabLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tab_layout_all_songs"
                app:tabSelectedTextColor="@color/textColorOrange"
                app:tabMode="scrollable"
                app:tabTextAppearance="@style/tab_layout_theme"
        >

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/view_pager_all_songs"
        >

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</FrameLayout>
