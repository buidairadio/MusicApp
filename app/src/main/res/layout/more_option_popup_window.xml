<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:background="@color/colorBackgroundLight"
>
<LinearLayout
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
              android:orientation="vertical"

>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_add_to_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_next_play"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/iv_more_option_add_to_next"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play Next"
                  android:layout_gravity="center_vertical"
                  android:id="@+id/tv_more_option_add_to_next"
                  android:textColor="@color/textColorDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_push_to_queue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_add_queue"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add to Queue"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/textColorDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_share"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
            android:visibility="gone"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_like"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Share"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/textColorDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_like"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_like"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/iv_more_option_like"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Like"
                  android:layout_gravity="center_vertical"
                  android:id="@+id/tv_more_option_like"
                  android:layout_marginStart="@dimen/_40sdp"
                  android:textColor="@color/textColorDark"

        />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_delete"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
            android:visibility="gone"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Delete"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/textColorDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_cancel"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
            android:visibility="gone"
    >
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Cancel"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="@dimen/_40sdp"
                  android:textColor="@color/textColorDark"

        />
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v7.widget.CardView>
