<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cv_song_select_backgound"
        app:cardElevation="@dimen/_0sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <android.support.v7.widget.CardView
                android:id="@+id/cv_song_select_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
                android:layout_gravity="center_vertical"
        >

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick_no"
                    android:layout_margin="@dimen/_5sdp"
                    android:clickable="false"
                    android:id="@+id/iv_song_select_state"
            />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
        >

            <ImageView
                    android:id="@+id/iv_song_select_icon"
                    android:layout_width="@dimen/home_screen_item_height"
                    android:layout_height="@dimen/home_screen_item_height"
                    android:src="@drawable/ic_songs"
                    android:clickable="false"
            />

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:id="@+id/iv_song_select_icon"-->
                    <!--android:layout_width="@dimen/home_screen_item_height"-->
                    <!--android:layout_height="@dimen/home_screen_item_height"-->
                    <!--android:src="@drawable/ic_songs"-->
                    <!--android:clickable="false"-->
            <!--/>-->

        </android.support.v7.widget.CardView>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
        >
            <TextView
                    android:id="@+id/tv_song_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Songs"
                    android:textSize="@dimen/text_size_3"
                    android:clickable="false"
                    android:maxLines="2"
                    android:textStyle="bold"
            />
            <TextView
                    android:id="@+id/tv_song_select_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Songs"
                    android:textSize="@dimen/text_size_4"
                    android:clickable="false"
            />
        </LinearLayout>

        <android.support.v7.widget.CardView
                android:id="@+id/cv_song_select_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                app:cardElevation="@dimen/_0sdp"
                app:cardBackgroundColor="@color/colorAbsoluteTransparency"
                android:layout_gravity="center_vertical"
        >

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_more"
                    android:layout_margin="@dimen/_10sdp"
                    android:clickable="false"
                    android:id="@+id/iv_song_select_options"
                    android:layout_gravity="center"
            />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>
